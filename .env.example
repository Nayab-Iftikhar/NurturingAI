# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (SQLite by default, no configuration needed)
# For PostgreSQL, uncomment and configure:
# DATABASE_URL=postgresql://user:password@localhost:5432/nurturingai

# JWT Authentication
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# For production, use SMTP:
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password-here
DEFAULT_FROM_EMAIL=noreply@nurturingai.com

# Test Email Configuration (for testing/demo)
# All emails will be sent to this address for testing
TEST_EMAIL=lailaskhan@gmail.com

# LLM API Keys (at least one is required for agent functionality)
# Option 1: OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here

# Option 2: Groq (recommended for free/fast inference)
GROQ_API_KEY=gsk_your-groq-api-key-here

# ChromaDB Configuration
# ChromaDB will store data in data/chromadb/ by default
# No additional configuration needed unless using remote ChromaDB

# Embedding Model
# Default: all-MiniLM-L6-v2 (384 dimensions)
# Other options: sentence-transformers/all-mpnet-base-v2, etc.
EMBEDDING_MODEL=all-MiniLM-L6-v2

# LangGraph Configuration
# LangGraph uses the LLM API keys above
# No additional configuration needed

# Vanna Configuration (Text-to-SQL)
# Vanna uses ChromaDB for training data storage
# Training data is automatically seeded on first use

# Static and Media Files
# Static files: staticfiles/
# Media files: media/
# No configuration needed for development

# Logging (optional)
# LOG_LEVEL=INFO
# LOG_FILE=logs/nurturingai.log

# Security Settings (Production)
# CSRF_TRUSTED_ORIGINS=https://yourdomain.com
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True

# Performance Settings (optional)
# CACHE_BACKEND=redis://localhost:6379/1
# CELERY_BROKER_URL=redis://localhost:6379/0
